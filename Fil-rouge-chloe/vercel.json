{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }]
    }
  ],
  "buildCommand": "npm run build-with-sitemap"
  
}
